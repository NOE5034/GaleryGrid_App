                <ImageButton Source="juan_feliz.jpg" Grid.Row="1" Grid.Column="2" Aspect="AspectFill" BackgroundColor="Grey" Margin="0.5,0.5" Clicked="ImageButton_Clicked_5"/>
                <ImageButton Source="baki.jpg" Grid.Row="1" Grid.Column="3" Aspect="AspectFill" BackgroundColor="Pink" Margin="0.5,0.5"/>


                <ImageButton Source="spiderman.jpg" Grid.Row="2" Grid.Column="0" Aspect="AspectFill" BackgroundColor="Orange" Margin="0.5,0.5"/>
                <ImageButton Source="cinturon.jpg" Grid.Row="2" Grid.Column="1" Aspect="AspectFill" BackgroundColor="white" Margin="0.5,0.5"/>
                <ImageButton Source="reloj.jpg" Grid.Row="2" Grid.Column="2" Aspect="AspectFill" BackgroundColor="Gold" Margin="0.5,0.5"/>
                <ImageButton Source="perico.jpg" Grid.Row="2" Grid.Column="3" Aspect="AspectFill" BackgroundColor="Pink" Margin="0.5,0.5"/>
