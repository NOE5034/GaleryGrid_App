            <ImageButton Source="luna.jpg" Grid.Row="2" Grid.Column="2" Aspect="Fill" BackgroundColor="Gold" Margin="0.5,0.5"/>
            <ImageButton Source="amanecer.jpg" Grid.Row="2" Grid.Column="3" Aspect="Fill" BackgroundColor="Pink" Margin="0.5,0.5"/>
        </Grid>

        <Label Text="Ayer" TextColor="White" FontSize="25" HorizontalOptions="Start"  Padding="10,10,10,10"/>

        <Grid Margin="0,10">

            <Grid.RowDefinitions>
                <RowDefinition  Height="70"></RowDefinition>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="70"></RowDefinition>



            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>


            </Grid.ColumnDefinitions>



            <ImageButton Source="mancuernas.jpg"  Grid.Row="0" Grid.Column="0"  Aspect="AspectFill"  Clicked="ImageButton_Clicked" />
            <ImageButton Source="gtr.jpg"   Grid.Row="0" Grid.Column="1"   Aspect="AspectFill" Clicked="ImageButton_Clicked_1"/>
                <ImageButton Source="lemans.jpg"  Grid.Row="0" Grid.Column="2"   Aspect="AspectFill" Clicked="ImageButton_Clicked_2"/>
                <ImageButton Source="ps5.jpg"  Grid.Row="0" Grid.Column="3"   Aspect="AspectFill" />



                <ImageButton Source="meme_perico.jpg" Grid.Row="1" Grid.Column="0" Aspect="AspectFill" BackgroundColor="Orange" Margin="0.5,0.5" />
